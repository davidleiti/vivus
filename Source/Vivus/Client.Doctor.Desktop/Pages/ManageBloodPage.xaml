<pages:BasePage x:Class="Vivus.Client.Doctor.Desktop.Pages.ManageBloodPage"
      x:TypeArguments="viewModel:ManageBloodViewModel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vivus.Client.Doctor.Desktop.Pages"
      xmlns:pages="clr-namespace:Vivus.Client.Core.Pages;assembly=Vivus.Client.Core"
      xmlns:viewModel="clr-namespace:Vivus.Core.Doctor.ViewModels;assembly=Vivus.Core.Doctor"
      xmlns:valueConverters="clr-namespace:Vivus.Client.Core.ValueConverters;assembly=Vivus.Client.Core"
      mc:Ignorable="d" 
      SnapsToDevicePixels="True"
      Title="ManageBloodPage">

    <Grid>
        <ScrollViewer>
            <StackPanel Margin="75 40" MinWidth="612">
                <TextBlock Text="Manage blood" Foreground="#212529" FontSize="24" FontFamily="{StaticResource SFProDisplay-Light}" Margin="0 0 0 18" />

                <!-- Table -->
                <DataGrid Height="420" Margin="0 0 0 20" ItemsSource="{Binding Items}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="#">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource DataGridFirstColumnHeaderTemplate}" />
                            </DataGridTextColumn.HeaderStyle>
                            <DataGridTextColumn.CellStyle>
                                <Style TargetType="{x:Type DataGridCell}" BasedOn="{StaticResource DataGridFirstCellTemplate}" />
                            </DataGridTextColumn.CellStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Container type" Width=".8*" Binding="{Binding ContainerType, StringFormat='{}{0}'}" />
                        <DataGridTextColumn Header="Blood type" Width=".6*" Binding="{Binding BloodType, StringFormat='{}{0}'}" />
                        <DataGridTextColumn Header="Container code" Width="1.3*" Binding="{Binding ContainerCode, StringFormat='{}{0}'}" />
                        <DataGridTextColumn Header="Harverst date" Width=".8*" Binding="{Binding HarvestDate, StringFormat='dd/MM/yyyy'}" />
                        <DataGridTextColumn Header="Expired" Width=".5*" Binding="{Binding Expired, Converter={valueConverters:BoolToStringConverter}}" />
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Dismiss & Return Button -->
                <Grid Margin="0 0 0 20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="31" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Add -->
                    <Button Grid.Column="1" Width="Auto" Content="Dismiss"  Command="{Binding DismissCommand}" />
                    <!-- Remove -->
                    <Button Grid.Column="3" Width="Auto" Content="Return" Command="{Binding ReturnCommand}"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>
        <TextBox Style="{StaticResource PagePopup}" Text="{Binding PopupMessage}" />
    </Grid>
</pages:BasePage>

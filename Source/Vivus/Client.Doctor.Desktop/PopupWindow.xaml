<Window x:Class="Vivus.Client.Doctor.Desktop.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vivus.Client.Doctor.Desktop"
        xmlns:valueConverters="clr-namespace:Vivus.Client.Doctor.Desktop.ValueConverters"
        WindowStartupLocation="CenterOwner"
        Icon="Icon.ico"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        KeyboardNavigation.IsTabStop="False"
        Title="PopupWindow" Width="800" Height="400">

    <Border x:Name="Container" Padding="74 40">
        <Border.Background>
            <SolidColorBrush Color="Black" Opacity="0.25" />
        </Border.Background>

        <Border CornerRadius="4" Background="#fafafa">
            <Frame x:Name="Frame" Content="{Binding CurrentPage, Converter={valueConverters:ApplicationPageToPageValueConverter}}" KeyboardNavigation.IsTabStop="False" />
        </Border>
    </Border>
</Window>

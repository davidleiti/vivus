<pages:BasePage x:Class="Vivus.Client.DCPersonnel.Desktop.Pages.BloodRequestsPage"
      x:TypeArguments="viewModel:BloodRequestsViewModel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vivus.Client.DCPersonnel.Desktop.Pages"
      xmlns:pages="clr-namespace:Vivus.Client.Core.Pages;assembly=Vivus.Client.Core"
      xmlns:viewModel="clr-namespace:Vivus.Core.DCPersonnel.ViewModels;assembly=Vivus.Core.DCPersonnel"
      mc:Ignorable="d" 
      SnapsToDevicePixels="True"
      Title="BloodRequestsPage">

    <Grid>
        <ScrollViewer>
            <StackPanel Margin="75 40" MinWidth="612">
                <TextBlock Text="Blood requests" Foreground="#212529" FontSize="24" FontFamily="{StaticResource SFProDisplay-Light}" Margin="0 0 0 18" />

                <!-- Current stash -->
                <TextBlock Foreground="#212529" FontSize="18.5" FontFamily="{StaticResource SFProDisplay-Light}" Margin="0 0 0 12" Text="Current stash" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="31" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="31" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Thrombocytes -->
                    <StackPanel>
                        <TextBlock Text="Thrombocytes" FontSize="15.5" FontFamily="{StaticResource SFProDisplay-Light}" Margin="0 0 0 10" />
                        <TextBox Tag="Quantity" IsReadOnly="True"  Text="{Binding Thrombocytes,ValidatesOnDataErrors=True,Mode=OneWay}" />
                    </StackPanel>
                    <!-- Red cells -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Red cells" FontSize="15.5" FontFamily="{StaticResource SFProDisplay-Light}" Margin="0 0 0 10" />
                        <TextBox Tag="Quantity" IsReadOnly="True" Text="{Binding RedCells,ValidatesOnDataErrors=True,Mode=OneWay}"/>
                    </StackPanel>
                    <!-- Plasma -->
                    <StackPanel Grid.Column="4">
                        <TextBlock Text="Plasma" FontSize="15.5" FontFamily="{StaticResource SFProDisplay-Light}" Margin="0 0 0 10" />
                        <TextBox Tag="Quantity"  IsReadOnly="True" Text="{Binding Plasma,ValidatesOnDataErrors=True,Mode=OneWay}"/>
                    </StackPanel>
                </Grid>

                <!-- Separator -->
                <Rectangle Height="1" Fill="#ced4da" Margin="0 19 0 16" />

                <!-- Manage Request -->
                <TextBlock Foreground="#212529" FontSize="18.5" FontFamily="{StaticResource SFProDisplay-Light}" Margin="0 0 0 12" Text="Manage request" />
                <!-- Current Request Details -->
                <Grid Margin="0 0 0 20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="31" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="31" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="31" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Priority -->
                    <StackPanel>
                        <TextBlock Text="Priority" FontSize="15.5" FontFamily="{StaticResource SFProDisplay-Light}" Margin="0 0 0 10" />
                        <TextBox Tag="Priority" IsReadOnly="True" Text="{Binding Priority,ValidatesOnDataErrors=true,Mode=OneWay}"/>
                    </StackPanel>
                    <!-- Current Thrombocytes -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Current thrombocytes" FontSize="15.5" FontFamily="{StaticResource SFProDisplay-Light}" Margin="0 0 0 10" />
                        <TextBox Tag="Containers" IsReadOnly="True" Text="{Binding CurrentThrombocytes,ValidatesOnDataErrors=True,Mode=OneWay}"/>
                    </StackPanel>
                    <!-- Current Red cells -->
                    <StackPanel Grid.Column="4">
                        <TextBlock Text="Current red cells" FontSize="15.5" FontFamily="{StaticResource SFProDisplay-Light}" Margin="0 0 0 10" />
                        <TextBox Tag="Containers" IsReadOnly="True" Text="{Binding CurrentRedCells,ValidatesOnDataErrors=True,Mode=OneWay}" />
                    </StackPanel>
                    <!-- Current Plasma -->
                    <StackPanel Grid.Column="6">
                        <TextBlock Text="Current plasma" FontSize="15.5" FontFamily="{StaticResource SFProDisplay-Light}" Margin="0 0 0 10" />
                        <TextBox Tag="Containers" IsReadOnly="True" Text="{Binding CurrentPlasma,ValidatesOnDataErrors=True,Mode=OneWay}" />
                    </StackPanel>
                </Grid>

                <!-- Current request Offer -->
                <Grid Margin="0 0 0 20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="31" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="31" />
                        <ColumnDefinition Width=".32*" />
                        <ColumnDefinition Width="31" />
                        <ColumnDefinition Width=".7*" />
                    </Grid.ColumnDefinitions>

                    <!-- Container type -->
                    <StackPanel>
                        <TextBlock Text="Container type" FontSize="15.5" FontFamily="{StaticResource SFProDisplay-Light}" Margin="0 0 0 10" />
                        <ComboBox x:Name="cbContainerType" ItemsSource="{Binding ContainerTypes}" SelectedItem="{Binding ContainerType, ValidatesOnDataErrors=True}">
                            <ComboBoxItem>Select container type</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                    <!-- Container code -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Container code" FontSize="15.5" FontFamily="{StaticResource SFProDisplay-Light}" Margin="0 0 0 10" />
                        <ComboBox x:Name="cbContainerCode" ItemsSource="{Binding ContainerCodes}" SelectedItem="{Binding ContainerCode, Mode=OneWayToSource, ValidatesOnDataErrors=True}">
                            <ComboBoxItem>Select container code</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                    <!-- Container blood type -->
                    <StackPanel Grid.Column="4">
                        <TextBlock Text="Blood type" FontSize="15.5" FontFamily="{StaticResource SFProDisplay-Light}" Margin="0 0 0 10" />
                        <TextBox Tag="Type" IsReadOnly="True" Text="{Binding BloodType,ValidatesOnDataErrors=True,Mode=OneWay}"/>
                    </StackPanel>
                    <!-- Harverst date -->
                    <StackPanel Grid.Column="6">
                        <TextBlock Text="Harverst date" FontSize="15.5" FontFamily="{StaticResource SFProDisplay-Light}" Margin="0 0 0 10" />
                        <TextBox Tag="dd/mm/yyyy" IsReadOnly="True" Text="{Binding HarvestDate,ValidatesOnDataErrors=True,Mode=OneWay}"/>
                    </StackPanel>
                </Grid>

                <!-- Add & Remove Button -->
                <Grid Margin="0 0 0 20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="31" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Add -->
                    <Button Grid.Column="1" Width="Auto" Content="Add" Command="{Binding AddCommand}"/>
                    <!-- Remove -->
                    <Button Grid.Column="3" Width="Auto" Content="Remove" Command="{Binding RemoveCommand}"/>
                </Grid>

                <!-- Table -->
                <DataGrid Height="280" ItemsSource="{Binding RequestDetailItems}" >
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="#">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource DataGridFirstColumnHeaderTemplate}" />
                            </DataGridTextColumn.HeaderStyle>
                            <DataGridTextColumn.CellStyle>
                                <Style TargetType="{x:Type DataGridCell}" BasedOn="{StaticResource DataGridFirstCellTemplate}" />
                            </DataGridTextColumn.CellStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Container code" Width="1.2*" Binding="{Binding ContainerCode, ValidatesOnDataErrors=True}"/>
                        <DataGridTextColumn Header="Container type" Width="*" Binding="{Binding ContainerType, ValidatesOnDataErrors=True}"/>
                        <DataGridTextColumn Header="Blood type" Width=".5*" Binding="{Binding BloodType, ValidatesOnDataErrors=True}"/>
                        <DataGridTextColumn Header="Harverst date" Width=".8*" Binding="{Binding HarvestDate, ValidatesOnDataErrors=True}"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Separator -->
                <Rectangle Height="1" Fill="#ced4da" Margin="0 19 0 16" />

                <!-- Add & Remove Button -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*" />
                        <ColumnDefinition Width="31" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>

                    <!-- Donation center redirect -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Donation center redirect" FontSize="15.5" FontFamily="{StaticResource SFProDisplay-Light}" Margin="0 0 0 10" />
                        <ComboBox x:Name="cbDonationCenter" ItemsSource="{Binding DonationCenters}" SelectedItem="{Binding DonationCenter, Mode=OneWayToSource, ValidatesOnDataErrors=True}">
                            <ComboBoxItem>Select donation center</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                    <!-- Continue -->
                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="38" />
                        </Grid.RowDefinitions>
                        <Button Grid.Row="1" Width="Auto" Content="Continue" Command="{Binding RedirectCommand}"/>
                    </Grid>
                </Grid>

                <!-- Separator -->
                <Rectangle Height="1" Fill="#ced4da" Margin="0 19 0 16" />

                <!-- All requests -->
                <TextBlock Foreground="#212529" FontSize="18.5" FontFamily="{StaticResource SFProDisplay-Light}" Margin="0 0 0 12" Text="All requests" />
                <!-- Table -->
                <DataGrid Height="420" ItemsSource="{Binding AllRequestsItems}" >
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="#" Binding="{Binding Id}">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource DataGridFirstColumnHeaderTemplate}" />
                            </DataGridTextColumn.HeaderStyle>
                            <DataGridTextColumn.CellStyle>
                                <Style TargetType="{x:Type DataGridCell}" BasedOn="{StaticResource DataGridFirstCellTemplate}" />
                            </DataGridTextColumn.CellStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Doctor" Width="*" Binding="{Binding Doctor, ValidatesOnDataErrors=True}" />
                        <DataGridTextColumn Header="Priority" Width=".8*" Binding="{Binding Priority, ValidatesOnDataErrors=True}"/>
                        <DataGridTextColumn Header="Thrombocytes" Width=".8*" Binding="{Binding Thrombocytes, ValidatesOnDataErrors=True}"/>
                        <DataGridTextColumn Header="Red cells" Width=".8*" Binding="{Binding RedCells, ValidatesOnDataErrors=True}" />
                        <DataGridTextColumn Header="Plasma" Width=".8*" Binding="{Binding Plasma, ValidatesOnDataErrors=True}"/>
                        <DataGridTextColumn Header="Blood type" Width=".8*" Binding="{Binding BloodTypes, ValidatesOnDataErrors=True}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </ScrollViewer>
        <TextBox Style="{StaticResource PagePopup}" Text="{Binding PopupMessage}" />
    </Grid>
</pages:BasePage>
